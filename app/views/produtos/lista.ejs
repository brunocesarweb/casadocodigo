<html>

	<% include ../includes/header %>

<body>
	<% include ../includes/menu %>

	<div class="container">
		<h1>Lista de livros cadastrados</h1>
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th>ID</th>
						<th>TÍTULO</th>
						<th>DESCRIÇÃO</th>
						<th>PREÇO</th>
					</tr>
				</thead>
				<tbody>
					<%for(var i = 0; i < lista.length; i++) {%>
						<tr class="active">
							<td><%=lista[i].id%></td>
							<td><%=lista[i].titulo%></td>
							<td><%=lista[i].descricao%></td>
							<td><%=lista[i].preco%></td>
						</tr>
					<%}%>
				</tbody>
			</table>
		</div>
	</div>

	<% include ../includes/footer %>

</body>
</html>
