<!DOCTYPE html>
<html>

	<% include ../includes/header %>

	<body>
	<% include ../includes/menu %>

		<%if(errosValidacao){%>
			<div class="erros">
				<ul>
					<%for(var i=0;i<errosValidacao.length;i++){%>
						<li><%=errosValidacao[i].msg%></li>
					<%}%>
				</ul>
			</div>
		<%}%>

		<div class="container">
			<form action="/produtos" method="post">
				<fieldset>
						<legend>Cadastrar Livro</legend>
						<div>
							<label for="titulo">Titulo</label>
							<input type="text" id="titulo" name="titulo" value="<%=produto.titulo%>" placeholder="coloque o titulo do livro">
						</div>
						<div>
							<label for="preco">Preço</label>
							<input type="text" id="preco" name="preco" <%=produto.preco%> placeholder="coloque o preco">
						</div>
						<div>
							<label for="descricao">Descrição</label>
							<textarea name="descricao" id="descricao" cols="20" rows="10" placeholder="coloque a descrição"><%=produto.descricao%></textarea>
						</div>
						<input type="submit" value="Gravar" id="btn-gravar" />
				</fieldset>
			</form>
		</div>

		<% include ../includes/footer %>

	</body>
</html>
